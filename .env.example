# ============================================
# Sportify Environment Variables Configuration
# ============================================
# Kopiere diese Datei zu .env und f√ºlle die Werte aus
# Copy this file to .env and fill in the values
# ============================================

# Database Connection
# PostgreSQL connection string (e.g., Neon, Supabase, or local PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Database SSL Configuration (optional)
# Set to true for hosted databases that require SSL (e.g., Neon, Supabase)
DATABASE_SSL_ENABLED=false
# Set to false if using self-signed certificates
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Backend Server Configuration
# Port for the Express backend server
PORT=3001

# Frontend Configuration
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:3001/api
# Frontend URL (used for email links and CORS)
FRONTEND_URL=http://localhost:8080

# JWT Secret
# IMPORTANT: Use a strong, random secret key in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Email Configuration (SMTP)
# Required for email verification, password reset, and invitations
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@sportify.com

# Node Environment
# Set to 'production' for production deployments
# NODE_ENV=development